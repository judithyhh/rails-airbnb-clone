<div class="cards">
  <div class="container">
    <div class="row">
     <% if @lenses.blank? %>
        <div class="col-xs-9">
            <div class="card-content">
              <p>No lenses to show. Click 'Add a lens listing' on the navigation bar to add a lens!</p>
            </div>
         </div>
     <% else %>
      <% @lenses.each do |lense| %>
        <%= link_to lense do %>
        <div class="col-xs-12 col-sm-4">
          <div class="outer-card">
            <div class="card-content">
              <h4><%= lense.brand %></h4>
              <p style="font-size: 12px"><%=lense.lens_type %></p>
              <p><%= lense.location %></p>
            </div>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path lense.photo.url, width: 250, height: 250, crop:"fit" %>);">
            </div>

        </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>

