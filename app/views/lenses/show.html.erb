<div class="cards-wrapper">
  <div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <%= cl_image_tag @lense.photo, width: 300, height: 400, crop: :fill %>
        </div>
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <h2><%= @lense.brand + " " + @lense.lens_type + " lens" %></h2>
        </div>
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <p>
            <strong><%= @lense.location %></strong>
            <%= " | Yours for " + "$" + ('%.2f' % @lense.price) + "/day" %>
          </p>
        </div>
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <p><%= "On loan from " + @lense.user.id.to_s %></p>
        </div>
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <p>
            <strong>Condition</strong>
          </p>
          <p>
            <%= @lense.condition %>
          </p>
        </div>
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <p>
            <%= link_to "Request to borrow", new_lense_booking_path(@lense), {class: "btn btn-treehouse"} %>
            <%= link_to "Back to all lenses", lenses_path, {class: "btn btn-primary"} %>
          </p>
        </div>
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <div id="map" style="width: 400px; height: 300px;"></div>
        </div>
    </div>
  </div>
</div>

<% content_for(:for_map) do %>
  <script type="text/javascript">
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
