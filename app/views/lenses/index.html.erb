<%= render "pages/banner" %>

<div class="cards-wrapper">
  <div class="container">
    <div class="row">
     <% unless @lenses.nil? %>
      <% @lenses.each do |lense| %>
        <%= link_to lense do %>
        <div class="col-xs-12 col-sm-4" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path lense.photo, width: 250, height: 250, crop: "fit" %>'), height: 250px, width: 250px" >

          <div class="banner-content">
            <h3><%= lense.brand + lense.lens_type %></h3>
            <p><%= "$" + ('%.2f' % lense.price) + "/day" %></p>
            <p><%= lense.location %></p>
          </div>
        </div>
        <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




<div id="map" style="width: 400px; height: 300px;"></div>

<% content_for(:for_map) do %>
  <script type="text/javascript">
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
