<%= render "banner" %>

<div class="cards-wrapper">
  <div class="container">
    <div class="row">
      <% @lenses.each do |lense| %>
        <%= link_to lense do %>
        <div class="col-xs-12 col-sm-4" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path cocktail.photo, width: 250, height: 250, crop: "fit" %>'), height: 250px, width: 250px" >

          <div class="banner-content">
            <p><%= lense.name %></p>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
